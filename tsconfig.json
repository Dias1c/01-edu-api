{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "./lib/esm"
  },
  "exclude": [
    "./**/tests/*",
    "./**/test/*",
    "*.test.ts",
    "*.tests.ts",
    "./**/tests.ts"
  ],
  "include": ["./src"],
  "ts-node": { "esm": true }
}
